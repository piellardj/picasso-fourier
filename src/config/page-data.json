{
    "title": "Picasso - Fourier",
    "description": "Í¯PLACEHOLDER DESCRIPTION",
    "introduction": [
        "PLACEHOLDER INTRODUCTION"
    ],
    "githubProjectName": "picasso-fourier",
    "additionalLinks": [],
    "scriptFiles": [
        "script/main.min.js"
    ],
    "indicators": [
        {
            "id": "fourier-order",
            "label": "Approximation order"
        }
    ],
    "canvas": {
        "width": 512,
        "height": 512,
        "enableFullscreen": true
    },
    "controlsSections": [
        {
            "title": "Animation",
            "controls": [
                {
                    "title": "Drawing",
                    "type": "picker",
                    "id": "preset-picker-id",
                    "placeholder": "Custom",
                    "options": [
                        {
                            "value": "arlequin",
                            "label": "Arlequin",
                            "checked": true
                        },
                        {
                            "value": "dog",
                            "label": "Dog"
                        },
                        {
                            "value": "triangle",
                            "label": "Triangle"
                        },
                        {
                            "value": "round",
                            "label": "Round"
                        }
                    ]
                },
                {
                    "title": "Speed",
                    "type": "range",
                    "id": "speed-range-id",
                    "min": 0,
                    "max": 1,
                    "value": 0.3,
                    "step": 0.01
                },
                {
                    "title": "Loop",
                    "type": "checkbox",
                    "id": "loop-checkbox-id",
                    "checked": false
                },
                {
                    "type": "button",
                    "id": "reset-button-id",
                    "label": "Reset",
                    "flat": true
                }
            ]
        },
        {
            "title": "Display",
            "controls": [
                {
                    "title": "Fourier order",
                    "type": "range",
                    "id": "order-range-id",
                    "min": 1,
                    "max": 300,
                    "value": 100,
                    "step": 1
                },
                {
                    "title": "Circles",
                    "type": "checkbox",
                    "id": "circles-checkbox-id",
                    "checked": true
                },
                {
                    "title": "Segments",
                    "type": "checkbox",
                    "id": "segments-checkbox-id",
                    "checked": true
                },
                {
                    "title": "Curve",
                    "type": "checkbox",
                    "id": "curve-checkbox-id",
                    "checked": true
                },
                {
                    "title": "Original curve",
                    "type": "checkbox",
                    "id": "original-curve-checkbox-id",
                    "checked": false
                }
            ]
        }
    ]
}